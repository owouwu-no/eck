import java.util.Scanner;

public class ElevatorTester {
    public static void main(String[] args) {
        System.out.print("Please enter a floor between 1 and 15: ");
        Scanner in = new Scanner(System.in);

        int floor = in.nextInt();
        int floorCount = floor;

        if(floor>13) {
            System.out.println("Changed the floor");
            floorCount--; }

        System.out.println("The elevator is going to the " + floorCount + " floor.");
    }
}
